{
  "name": "utlx-theia-app",
  "version": "0.1.0",
  "description": "UTL-X Theia IDE Test Application",
  "private": true,
  "dependencies": {
    "@theia/core": "1.64.0",
    "@theia/editor": "1.64.0",
    "@theia/filesystem": "1.64.0",
    "@theia/markers": "1.64.0",
    "@theia/messages": "1.64.0",
    "@theia/monaco": "1.64.0",
    "@theia/navigator": "1.64.0",
    "@theia/outline-view": "1.64.0",
    "@theia/output": "1.64.0",
    "@theia/preferences": "1.64.0",
    "@theia/process": "1.64.0",
    "@theia/terminal": "1.64.0",
    "@theia/workspace": "1.64.0",
    "@vscode/ripgrep": "^1.17.0",
    "utlx-theia-extension": "file:../utlx-theia-extension"
  },
  "devDependencies": {
    "@theia/cli": "1.64.0",
    "rimraf": "^5.0.0"
  },
  "scripts": {
    "prepare": "theia build --mode development",
    "build": "theia build --mode production",
    "start": "theia start --hostname=0.0.0.0 --port=4000 ~/data/utlx-workspace",
    "start:debug": "theia start --hostname=0.0.0.0 --port=4000 --loglevel=debug ~/data/utlx-workspace",
    "rebuild-and-start": "../rebuild-and-start.sh",
    "watch": "theia build --watch --mode development",
    "clean": "rm -rf .theia lib node_modules",
    "clean:extension": "cd ../utlx-theia-extension && yarn clean",
    "rebuild:extension": "cd ../utlx-theia-extension && yarn rebuild",
    "rebuild": "yarn clean:extension && yarn rebuild:extension && yarn clean && yarn install && yarn build"
  },
  "theia": {
    "target": "browser",
    "frontend": {
      "config": {
        "applicationName": "UTL-X IDE",
        "preferences": {
          "files.enableTrash": false,
          "workspace.supportMultiRootWorkspace": true,
          "terminal.integrated.shell.linux": "/bin/bash",
          "workbench.startupEditor": "none",
          "explorer.autoReveal": false
        }
      }
    },
    "backend": {
      "config": {
        "startupTimeout": -1,
        "resolveSystemPlugins": false
      }
    }
  }
}
