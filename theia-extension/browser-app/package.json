{
  "name": "utlx-theia-app",
  "version": "0.1.0",
  "description": "UTL-X Theia IDE Test Application",
  "private": true,
  "dependencies": {
    "@theia/core": "1.64.0",
    "@theia/editor": "1.64.0",
    "@theia/filesystem": "1.64.0",
    "@theia/markers": "1.64.0",
    "@theia/messages": "1.64.0",
    "@theia/monaco": "1.64.0",
    "@theia/navigator": "1.64.0",
    "@theia/outline-view": "1.64.0",
    "@theia/output": "1.64.0",
    "@theia/preferences": "1.64.0",
    "@theia/process": "1.64.0",
    "@theia/search-in-workspace": "1.64.0",
    "@theia/terminal": "1.64.0",
    "@theia/workspace": "1.64.0",
    "utlx-theia-extension": "0.1.0"
  },
  "devDependencies": {
    "@theia/cli": "1.64.0",
    "rimraf": "^5.0.0"
  },
  "scripts": {
    "prepare": "theia build --mode development",
    "build": "theia build --mode production",
    "start": "theia start --hostname=0.0.0.0 --port=3000",
    "start:debug": "theia start --hostname=0.0.0.0 --port=3000 --loglevel=debug",
    "watch": "theia build --watch --mode development",
    "clean": "rimraf .theia lib node_modules",
    "rebuild": "yarn clean && yarn install && yarn build"
  },
  "theia": {
    "target": "browser",
    "frontend": {
      "config": {
        "applicationName": "UTL-X IDE",
        "preferences": {
          "files.enableTrash": false,
          "workspace.supportMultiRootWorkspace": true
        }
      }
    },
    "backend": {
      "config": {
        "startupTimeout": -1,
        "resolveSystemPlugins": false
      }
    }
  }
}
