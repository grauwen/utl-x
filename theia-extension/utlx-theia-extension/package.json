{
  "name": "utlx-theia-extension",
  "version": "0.1.0",
  "description": "UTL-X IDE extension for Eclipse Theia with Design-Time and Runtime modes",
  "keywords": [
    "theia-extension",
    "utlx",
    "transformation",
    "data-mapping"
  ],
  "license": "AGPL-3.0",
  "author": "UTL-X Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/utl-x/utl-x.git"
  },
  "main": "lib/node/backend-module.js",
  "theiaExtensions": [
    {
      "frontend": "lib/browser/frontend-module",
      "backend": "lib/node/backend-module"
    }
  ],
  "dependencies": {
    "uuid": "^9.0.0",
    "vscode-jsonrpc": "^8.1.0",
    "vscode-languageserver-protocol": "^3.17.3",
    "form-data": "^4.0.0"
  },
  "peerDependencies": {
    "@theia/core": "1.64.0",
    "@theia/filesystem": "1.64.0",
    "@theia/workspace": "1.64.0",
    "@theia/editor": "1.64.0",
    "@theia/monaco": "1.64.0",
    "@theia/messages": "1.64.0",
    "@theia/output": "1.64.0",
    "@theia/terminal": "1.64.0",
    "inversify": "^6.0.1"
  },
  "devDependencies": {
    "@theia/core": "1.64.0",
    "@theia/editor": "1.64.0",
    "@theia/filesystem": "1.64.0",
    "@theia/messages": "1.64.0",
    "@theia/monaco": "1.64.0",
    "@theia/output": "1.64.0",
    "@theia/terminal": "1.64.0",
    "@theia/workspace": "1.64.0",
    "@types/node": "^18.0.0",
    "@types/uuid": "^9.0.0",
    "inversify": "^6.0.1",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "clean": "rm -rf lib tsconfig.tsbuildinfo",
    "build": "npx tsc && mkdir -p lib/browser && cp -r src/browser/style lib/browser/",
    "rebuild": "yarn clean && yarn build",
    "watch": "npx tsc -w",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "files": [
    "lib",
    "src"
  ]
}
