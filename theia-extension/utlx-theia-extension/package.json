{
  "name": "utlx-theia-extension",
  "version": "0.1.0",
  "description": "UTL-X IDE extension for Eclipse Theia with Design-Time and Runtime modes",
  "keywords": [
    "theia-extension",
    "utlx",
    "transformation",
    "data-mapping"
  ],
  "license": "AGPL-3.0",
  "author": "UTL-X Team",
  "repository": {
    "type": "git",
    "url": "https://github.com/utl-x/utl-x.git"
  },
  "main": "lib/node/backend-module.js",
  "theiaExtensions": [
    {
      "frontend": "lib/browser/frontend-module",
      "backend": "lib/node/backend-module"
    }
  ],
  "dependencies": {
    "@theia/core": "^1.45.0",
    "@theia/filesystem": "^1.45.0",
    "@theia/workspace": "^1.45.0",
    "@theia/editor": "^1.45.0",
    "@theia/monaco": "^1.45.0",
    "@theia/languages": "^1.45.0",
    "@theia/messages": "^1.45.0",
    "@theia/output": "^1.45.0",
    "@theia/terminal": "^1.45.0",
    "inversify": "^6.0.1",
    "uuid": "^9.0.0",
    "vscode-jsonrpc": "^8.1.0",
    "vscode-languageserver-protocol": "^3.17.3"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/uuid": "^9.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "clean": "rimraf lib",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "files": [
    "lib",
    "src"
  ]
}
