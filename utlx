#!/bin/bash
# UTL-X CLI wrapper script

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
CLI_JAR="$SCRIPT_DIR/modules/cli/build/libs/cli-1.0.0-SNAPSHOT.jar"

if [[ ! -f "$CLI_JAR" ]]; then
    echo "Error: CLI JAR not found at $CLI_JAR" >&2
    echo "Build it first: ./gradlew :modules:cli:jar" >&2
    exit 1
fi

exec java -jar "$CLI_JAR" "$@"
