<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Suppress logback's own status messages -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />

    <!-- Property for log pattern -->
    <property name="LOG_PATTERN" value="%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>
    <property name="COLOR_PATTERN" value="%d{HH:mm:ss.SSS} %highlight(%-5level) %cyan(%logger{36}) - %msg%n"/>

    <!-- Console Appender - dynamically controlled by DebugConfig -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <target>System.err</target>
        <encoder>
            <pattern>${COLOR_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- File Appender (optional) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/utlx-debug.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/utlx-debug.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Suppress noisy third-party DEBUG messages -->
    <logger name="org.apache.xml.security" level="WARN"/>
    <logger name="org.slf4j" level="WARN"/>

    <!-- Component-specific loggers - controlled programmatically by DebugConfig -->
    <!-- Don't set levels here to allow DebugConfig to control them dynamically -->

    <!-- Root logger - default INFO, controlled by DebugConfig -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <!-- Uncomment to also log to file -->
        <!-- <appender-ref ref="FILE"/> -->
    </root>
</configuration>
