{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/application-config.schema.json",
  "title": "Application Configuration",
  "description": "Application configuration file schema for microservices",
  "type": "object",
  "required": ["application", "server", "database"],
  "properties": {
    "application": {
      "type": "object",
      "required": ["name", "version", "environment"],
      "properties": {
        "name": {
          "type": "string",
          "pattern": "^[a-z0-9-]+$",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-z0-9.]+)?$"
        },
        "environment": {
          "type": "string",
          "enum": ["development", "staging", "production"]
        },
        "description": {
          "type": "string"
        }
      }
    },
    "server": {
      "type": "object",
      "required": ["port"],
      "properties": {
        "host": {
          "type": "string",
          "default": "0.0.0.0"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        },
        "ssl": {
          "type": "object",
          "required": ["enabled"],
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "certificatePath": {
              "type": "string"
            },
            "keyPath": {
              "type": "string"
            }
          }
        },
        "timeout": {
          "type": "integer",
          "minimum": 1,
          "description": "Timeout in seconds"
        },
        "maxConnections": {
          "type": "integer",
          "minimum": 1,
          "maximum": 10000
        }
      }
    },
    "database": {
      "type": "object",
      "required": ["type", "host", "name"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["postgresql", "mysql", "mongodb", "redis"]
        },
        "host": {
          "type": "string"
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        },
        "name": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "ssl": {
          "type": "boolean",
          "default": false
        },
        "pool": {
          "type": "object",
          "properties": {
            "min": {
              "type": "integer",
              "minimum": 0
            },
            "max": {
              "type": "integer",
              "minimum": 1
            },
            "idleTimeout": {
              "type": "integer",
              "minimum": 1000,
              "description": "Idle timeout in milliseconds"
            }
          }
        }
      }
    },
    "logging": {
      "type": "object",
      "properties": {
        "level": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error"],
          "default": "info"
        },
        "format": {
          "type": "string",
          "enum": ["json", "text"],
          "default": "json"
        },
        "outputs": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["console", "file", "syslog"]
          }
        }
      }
    },
    "cache": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "ttl": {
          "type": "integer",
          "minimum": 1,
          "description": "Cache TTL in seconds"
        },
        "maxSize": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum cache size in MB"
        }
      }
    },
    "monitoring": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "metricsPort": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        },
        "healthCheckPath": {
          "type": "string",
          "pattern": "^/[a-z0-9/_-]*$"
        }
      }
    },
    "features": {
      "type": "object",
      "description": "Feature flags",
      "additionalProperties": {
        "type": "boolean"
      }
    }
  }
}
