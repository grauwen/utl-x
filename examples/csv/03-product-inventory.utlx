%utlx 1.0
input inventory csv
output json
---
{
  "inventoryReport": {
    "totalProducts": count($inventory),
    "totalValue": sum(map($inventory, p => p.QuantityOnHand * p.UnitCost)),
    "lowStockItems": filter($inventory, p => p.QuantityOnHand <= p.ReorderLevel),
    "byCategory": {
      "Electronics": filter($inventory, p => p.Category == "Electronics"),
      "Accessories": filter($inventory, p => p.Category == "Accessories"),
      "Furniture": filter($inventory, p => p.Category == "Furniture"),
      "Lighting": filter($inventory, p => p.Category == "Lighting")
    }
  },
  "products": map($inventory, item => {
    "sku": item.SKU,
    "name": item.ProductName,
    "category": item.Category,
    "stock": item.QuantityOnHand,
    "needsReorder": item.QuantityOnHand <= item.ReorderLevel,
    "profitMargin": item.ListPrice - item.UnitCost,
    "supplier": item.SupplierID
  })
}
