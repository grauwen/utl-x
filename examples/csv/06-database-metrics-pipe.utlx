%utlx 1.0
input metrics csv {delimiter: "|"}
output json
---
{
  "databaseReport": {
    "totalTables": count($metrics),
    "totalSizeGB": sum(map($metrics, m => m.SizeGB)),
    "totalRows": sum(map($metrics, m => m.RowCount)),
    "byDatabase": {
      "ProductionDB": filter($metrics, m => m.DatabaseName == "ProductionDB"),
      "AnalyticsDB": filter($metrics, m => m.DatabaseName == "AnalyticsDB"),
      "TestDB": filter($metrics, m => m.DatabaseName == "TestDB"),
      "StagingDB": filter($metrics, m => m.DatabaseName == "StagingDB")
    },
    "highFragmentation": filter($metrics, m => m.FragmentationPct > 20)
  },
  "tables": map($metrics, m => {
    "database": m.DatabaseName,
    "table": m.TableName,
    "rows": m.RowCount,
    "sizeGB": m.SizeGB,
    "needsOptimization": m.FragmentationPct > 15
  })
}
